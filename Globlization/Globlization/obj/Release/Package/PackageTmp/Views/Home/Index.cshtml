@{
    ViewBag.Title = "Home Page";
    if(ViewBag.Culture!=null)
    {
        Culture = UICulture = ViewBag.Culture;
    }

    int cu = 35;
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">@Resources.Content.Welcome</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Getting started</h2>
        <p>
          @cu.ToString("C")  
            <br />
        @Html.ActionLink("English", "ChangeCulture", "Home", new { culture = "en" }, null)
